 <%= image_tag("bgc_profil.gif", class: "background-image", alt: "Background for video games") %>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6 profile-container">
     <h1>Profil de <%= @user.user_name %></h1>
      <div class="row">
        <div class="col-md-4">

          <% if current_user.photo.attached?  %>
              <%= cl_image_tag current_user.photo.key, class: "profile-image img-fluid", width: "150", height: "150", crop: :fill %>
            <% else %>
              <%= image_tag("profil.png", width: "150", height: "150") %>
            <% end %>

        </div>
        <div class="col-md-8">
          <p><strong>Nom :</strong> <%= @user.last_name.capitalize %></p>
          <p><strong>Prénom :</strong> <%= @user.first_name.capitalize %></p>
          <p><strong>Âge :</strong> <%= calculate_age(@user.birthday) %></p>
          <p><strong>Email :</strong> <%= @user.email %></p>
           <%= link_to "Éditer le profil", edit_user_registration_path(@user), class: "btn btn-primary" %>


          <%= link_to "Supprimer le profil", user_path(@user), method: :delete, data: { turbo_method: :delete, turbo_confirm: "Êtes-vous sûr ?" }, class: "btn btn-danger delete-button" %>



        </div>
      </div>
    </div>
  </div>
</div>
