<div class="container">
  <div class="row">
    <div class="col-md-6">
      <!-- Formulaire de connexion -->
      <h2 class="text-center mb-4">Connexion</h2>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-signin" }) do |f| %>
        <div class="form-group">
          <%= f.input :email, required: false, autofocus: true, placeholder: "Adresse e-mail", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.input :password, required: false, placeholder: "Mot de passe", class: "form-control" %>
        </div>

        <div class="form-group form-check">
          <%= f.input :remember_me, as: :boolean, label: false, class: "form-check-input" if devise_mapping.rememberable? %>
          <%= f.label :remember_me, class: "form-check-label" if devise_mapping.rememberable? %>
        </div>

        <div class="form-group">
          <%= f.button :submit, "Se connecter", class: "btn btn-warning btn-block" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>

    <div class="col-md-6">
      <!-- Image Ã  gauche -->
      <%= image_tag("Ac", class: "full-height-image", alt: "Description de l'image") %>
    </div>
  </div>
</div>
