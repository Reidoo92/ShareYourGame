<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>
  <div class="box-register">
  <div class="form-inputs">
  <div class="wallpaper"></div>
  <div class="register">
    <%= f.input :first_name,
                required: true,
                input_html: { autocomplete: "first-name", class: "custom-input" } %>
    <%= f.input :last_name,
                required: true,
                input_html: { autocomplete: "last-name", class: "custom-input" } %>
    <%= f.input :birthday,
            as: :string,
            input_html: { data: { controller: "datepicker" }, class: "custom-input" } %>
    <%= f.input :user_name,
                required: true,
                input_html: { autocomplete: "user-name", class: "custom-input" } %>
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email", class: "custom-input" }%>
    <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password", class: "custom-input" } %>
    <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "new-password", class: "custom-input" } %>
</div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>
</div>

<%= render "devise/shared/links" %>
